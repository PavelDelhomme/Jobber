<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/contactFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEditContact"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/entreprise"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/entreprise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="@id/contactFullName"
        app:layout_constraintEnd_toEndOf="@id/contactFullName"
        app:layout_constraintTop_toBottomOf="@id/contactFullName"
        app:layout_constraintBottom_toTopOf="@+id/telephoneContact"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/telephoneContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="@id/entreprise"
        app:layout_constraintEnd_toEndOf="@id/entreprise"
        app:layout_constraintTop_toBottomOf="@id/entreprise"
        app:layout_constraintBottom_toTopOf="@+id/emailContact"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/emailContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="@id/telephoneContact"
        app:layout_constraintEnd_toEndOf="@id/telephoneContact"
        app:layout_constraintTop_toBottomOf="@id/telephoneContact"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnEditContact"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Edit"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteContact"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnDeleteContact"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
