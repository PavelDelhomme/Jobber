<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:divider="?android:attr/listDivider"
    android:showDividers="middle">

    <TextView
        android:id="@+id/dateEntretien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Date"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/entrepriseEntretien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Entreprise"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/typeEntretien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Type"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/candidatureTitreEntretien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Titre offre"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/nomContactEntretien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Nom contact"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btnDeleteEntretien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:layout_gravity="end"
        android:textColor="#FFFFFF"
        android:background="@color/design_default_color_error"/>

</LinearLayout>