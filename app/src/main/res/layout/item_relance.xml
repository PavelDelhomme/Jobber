<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/dateRelance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEditRelance"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/entrepriseRelance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="@id/dateRelance"
        app:layout_constraintEnd_toEndOf="@id/dateRelance"
        app:layout_constraintTop_toBottomOf="@id/dateRelance"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/candidatureTitre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="@id/entrepriseRelance"
        app:layout_constraintEnd_toEndOf="@id/entrepriseRelance"
        app:layout_constraintTop_toBottomOf="@id/entrepriseRelance"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/plateformeRelance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="@id/candidatureTitre"
        app:layout_constraintEnd_toEndOf="@id/candidatureTitre"
        app:layout_constraintTop_toBottomOf="@id/candidatureTitre"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/notesRelance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#FF5722"
        app:layout_constraintStart_toStartOf="@id/plateformeRelance"
        app:layout_constraintEnd_toEndOf="@id/plateformeRelance"
        app:layout_constraintTop_toBottomOf="@id/plateformeRelance"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnEditEntreprise"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Edit"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteRelance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnDeleteRelance"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="@color/design_default_color_error"
        android:contentDescription="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
