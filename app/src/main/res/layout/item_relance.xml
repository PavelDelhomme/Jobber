<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/dateRelance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:text="XX/XX/XXXX"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/entrepriseRelance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:text="Xxxxxxx"
            app:layout_constraintStart_toStartOf="@id/dateRelance"
            app:layout_constraintEnd_toEndOf="@id/candidatureTitre"
            app:layout_constraintTop_toBottomOf="@id/dateRelance"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/candidatureTitre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:text="Xxxxx xxxxxx"
            app:layout_constraintTop_toBottomOf="@id/entrepriseRelance"
            android:layout_marginEnd="8dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/plateformeRelance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:text="Xxxxxxx"
            app:layout_constraintTop_toBottomOf="@id/candidatureTitre"
            android:layout_marginEnd="8dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/notesRelance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FF5722"
            android:text="Xxxxxxxxxxxxxxxxxxxxx"
            app:layout_constraintTop_toBottomOf="@id/plateformeRelance"
            android:layout_marginEnd="8dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>