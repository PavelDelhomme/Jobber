<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editText_date_relance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="Date de la relance"
        android:drawableRight="@android:drawable/ic_menu_today"
        android:inputType="date" />

    <Spinner
        android:id="@+id/spinner_plateforme_relance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinner_contact_relance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sélectionnez un contact (facultatif)" />


    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewRelanceEntreprise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sélectionnez un contact (facultatif)"
        android:inputType="text" />

    <EditText
        android:id="@+id/editText_notes_relance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notes de la relance"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:minHeight="100dp" />

    <Button
        android:id="@+id/button_add_relance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter Relance" />
</LinearLayout>
