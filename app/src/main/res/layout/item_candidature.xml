<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/nomPoste"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEditCandidature"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/entreprise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="@id/nomPoste"
        app:layout_constraintEnd_toEndOf="@id/nomPoste"
        app:layout_constraintTop_toBottomOf="@id/nomPoste"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="@id/entreprise"
        app:layout_constraintEnd_toEndOf="@id/entreprise"
        app:layout_constraintTop_toBottomOf="@id/entreprise"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/etat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#FF5722"
        app:layout_constraintStart_toStartOf="@id/date"
        app:layout_constraintEnd_toEndOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/typePoste"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/etat"
        app:layout_constraintEnd_toEndOf="@id/etat"
        app:layout_constraintTop_toBottomOf="@id/etat"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/plateforme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/typePoste"
        app:layout_constraintEnd_toEndOf="@id/typePoste"
        app:layout_constraintTop_toBottomOf="@id/typePoste"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tvNotesCandidature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/plateforme"
        app:layout_constraintEnd_toEndOf="@id/plateforme"
        app:layout_constraintTop_toBottomOf="@id/plateforme"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnEditCandidature"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Edit"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteCandidature"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnDeleteCandidature"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="@color/design_default_color_error"
        android:contentDescription="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
