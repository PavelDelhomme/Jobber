<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etTitreOffre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titre de l'offre"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etDateCandidature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date de candidature"
            android:focusable="false"
            android:drawableRight="@android:drawable/ic_menu_today"
            />

        <AutoCompleteTextView
            android:id="@+id/actvNomEntreprise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom de l'entreprise"
            android:inputType="text" />

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes"
            android:inputType="textMultiLine"/>

        <Spinner
            android:id="@+id/spinner_type_poste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinner_plateforme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etLieuPoste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lieu du poste"
            android:inputType="text"/>

        <Button
            android:id="@+id/btnSaveCandidatureChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregistrer les modifications"/>

        <Button
            android:id="@+id/btnCancelCandidatureChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Annuler"/>
    </LinearLayout>
</ScrollView>
