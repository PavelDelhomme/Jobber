<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentEntretiens">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEntretiens"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnAddEntretien"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_entretien" />

    <TextView
        android:id="@+id/empty_view_entretiens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aucuns entretiens pour la candidature" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddEntretien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ajouter Entretien"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.MaterialComponents.Button.Filled"
        android:layout_margin="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
