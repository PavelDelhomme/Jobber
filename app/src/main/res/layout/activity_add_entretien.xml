<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Activity.Entretien.AddEntretienActivity">

    <EditText
        android:id="@+id/dateEntretien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="Date de l'entretien"
        android:drawableRight="@android:drawable/ic_menu_today" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewEntretien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom de l'entreprise"
        android:inputType="text" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom du contact"
        android:inputType="text" />

    <Spinner
        android:id="@+id/spinner_type_entretien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinner_mode_entretien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etNotesEntretien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notes prÃ©-entretien" />

    <Button
        android:id="@+id/button_add_entretien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnCancelEntretienChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annuler" />
</LinearLayout>
